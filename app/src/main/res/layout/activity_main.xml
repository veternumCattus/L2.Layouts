<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/keypad_num_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@id/keypad_num_4"
        app:layout_constraintEnd_toStartOf="@id/keypad_num_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/keypad_num_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        app:layout_constraintEnd_toStartOf="@id/keypad_num_3"
        app:layout_constraintStart_toEndOf="@id/keypad_num_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/keypad_num_5"/>

    <Button
        android:id="@+id/keypad_num_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/keypad_num_2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/keypad_num_6"/>

    <Button
        android:id="@+id/keypad_num_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        app:layout_constraintBottom_toTopOf="@id/keypad_num_7"
        app:layout_constraintEnd_toStartOf="@id/keypad_num_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/keypad_num_1" />

    <Button
        android:id="@+id/keypad_num_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        app:layout_constraintEnd_toStartOf="@id/keypad_num_6"
        app:layout_constraintStart_toEndOf="@id/keypad_num_4"
        app:layout_constraintTop_toBottomOf="@id/keypad_num_2"
        app:layout_constraintBottom_toTopOf="@id/keypad_num_8"/>


    <Button
        android:id="@+id/keypad_num_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        app:layout_constraintBottom_toTopOf="@id/keypad_num_9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/keypad_num_5"
        app:layout_constraintTop_toBottomOf="@id/keypad_num_3" />

    <Button
        android:id="@+id/keypad_num_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/keypad_num_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/keypad_num_4" />

    <Button
        android:id="@+id/keypad_num_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        app:layout_constraintEnd_toStartOf="@id/keypad_num_9"
        app:layout_constraintStart_toEndOf="@id/keypad_num_4"
        app:layout_constraintTop_toBottomOf="@id/keypad_num_5"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/keypad_num_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/keypad_num_8"
        app:layout_constraintTop_toBottomOf="@id/keypad_num_6"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>